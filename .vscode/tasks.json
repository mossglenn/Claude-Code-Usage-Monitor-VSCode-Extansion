// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"base": "$tsc-watch",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started",
					"endsPattern": "^\\[watch\\] build finished"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Check Types",
			"type": "npm",
			"script": "check-types",
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	]
}
